{
  "name": "use-epics",
  "version": "0.1.0",
  "description": "React hook combining a simplified usage of useReducer and redux-observable-ish epics for side-effects.",
  "keywords": [
    "react",
    "hooks",
    "useReducer",
    "immer",
    "state management",
    "rxjs",
    "epic"
  ],
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/use-epics.m.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "microbundle",
    "prebuild": "rimraf dist",
    "dev": "watch microbundle",
    "start": "parcel demo/index.html",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache"
  },
  "author": "Richard Van Camp",
  "repository": {
    "type": "git",
    "url": "https://github.com/RikuVan/use-epics"
  },
  "license": "MIT",
  "dependencies": {
    "@types/react": "^16.8.8",
    "immer": "^2.1.5",
    "react-dom": "^16.8.6",
    "rxjs": "^6.4.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "axios": "^0.18.0",
    "jest": "^24.7.1",
    "jest-config": "^24.7.1",
    "microbundle": "^0.11.0",
    "parcel-bundler": "^1.12.3",
    "react": "^16.0.0",
    "react-testing-library": "^6.1.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.3"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "rxjs": "^6.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  }
}
